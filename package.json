{
  "name": "exte",
  "displayName": "Exte",
  "description": "Web extension starter template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development concurrently \"npm run dev:prepare\" \"npm run dev:background\" \"npm run dev:web\" \"npm run dev:js\"",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox concurrently \"npm run dev:prepare\" \"npm run dev:background\" \"npm run dev:web-firefox\" \"npm run dev:js\"",
    "dev:prepare": "bun run scripts/prepare.ts",
    "dev:background": "bun run build:background -- --mode development",
    "dev:web": "vite",
    "dev:web-firefox": "npm run build:web -- --mode development",
    "dev:js": "bun run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production npm run clear && npm run build:web && npm run build:prepare && npm run build:background && npm run build:js",
    "build:prepare": "bun run scripts/prepare.ts",
    "build:background": "vite build --config ./vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config ./vite.config.content.mts",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "bun run scripts/clear.ts",
    "pre-commit": "bun lint-staged",
    "ladle:dev": "ladle serve",
    "ladle:build": "ladle build",
    "ladle:preview": "ladle preview",
    "lint": "biome check .",
    "lint:apply": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "prepare": "bun ./scripts/prepare.ts",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nextui-org/react": "^2.4.1",
    "@tanstack/react-query": "^5.45.0",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-react": "^4.3.1",
    "axios": "^1.7.2",
    "bun-types": "^1.1.13",
    "cross-env": "^7.0.3",
    "framer-motion": "^10.18.0",
    "fs-extra": "^11.2.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.293.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "webextension-polyfill": "^0.12.0",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@ladle/react": "4.1.0",
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.3.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json}": [
      "biome check --apply .",
      "biome format --write ."
    ]
  }
}
